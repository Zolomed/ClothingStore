<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/indent"
    android:layout_marginTop="@dimen/indent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/weather_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Moscow" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/indent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/weather_image"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="25dp"
            app:srcCompat="@android:drawable/ic_dialog_info" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/indent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/weather_ob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sunny" />

            <TextView
                android:id="@+id/weather_temp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="20 С°" />

            <TextView
                android:id="@+id/weather_localtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="2024-04-26 16:49" />

            <TextView
                android:id="@+id/weather_vis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="10 km/h" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>